<head>
  <meta lang="es" />
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
  <!-- Site Properties -->
  <title>Suma Movil</title>
  <link rel="stylesheet" type="text/css" href="/semantic/components/reset.css" />
  <link rel="stylesheet" type="text/css" href="/semantic/components/site.css" />
  <link rel="stylesheet" type="text/css" href="/semantic/components/tab.css" />
  <link rel="stylesheet" type="text/css" href="/semantic/semantic.css" />
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <style type="text/css">
    .hidden.menu {
      display: none;
    }

    .masthead.segment {
      min-height: 700px;
      padding: 1em 0em;
    }

    .masthead .logo.item img {
      margin-right: 1em;
    }

    .masthead .ui.menu .ui.button {
      margin-left: 0.5em;
    }

    .masthead h1.ui.header {
      margin-top: 3em;
      margin-bottom: 0em;
      font-size: 4em;
      font-weight: normal;
    }

    .masthead h2 {
      font-size: 1.7em;
      font-weight: normal;
    }

    .ui.vertical.stripe {
      padding: 8em 0em;
    }

    .ui.vertical.stripe h3 {
      font-size: 2em;
    }

    .ui.vertical.stripe .button+h3,
    .ui.vertical.stripe p+h3 {
      margin-top: 3em;
    }

    .ui.vertical.stripe .floated.image {
      clear: both;
    }

    .ui.vertical.stripe p {
      font-size: 1.33em;
    }

    .ui.vertical.stripe .horizontal.divider {
      margin: 3em 0em;
    }

    .quote.stripe.segment {
      padding: 0em;
    }

    .quote.stripe.segment .grid .column {
      padding-top: 5em;
      padding-bottom: 5em;
    }

    .footer.segment {
      padding: 5em 0em;
    }

    .secondary.pointing.menu .toc.item {
      display: none;
    }

    #contenidoApp {
      padding-left: 20px;
      padding-right: 20px;
      padding-top: 100px;
    }

    @media only screen and (max-width: 700px) {
      #contenidoApp {
        margin-left: 10px;
      }

      .ui.fixed.menu {
        display: none !important;
      }

      .secondary.pointing.menu .item,
      .secondary.pointing.menu .menu {
        display: none;
      }

      .secondary.pointing.menu .toc.item {
        display: block;
      }

      .masthead.segment {
        min-height: 350px;
      }

      .masthead h1.ui.header {
        font-size: 2em;
        margin-top: 1.5em;
      }

      .masthead h2 {
        margin-top: 0.5em;
        font-size: 1.5em;
      }
    }
  </style>
</head>
<div class="ui container">
  <div class="ui grid">
    {{!-- <div class="ui one wide column"></div> --}}
    <div class="ui fourteen wide column">
      <div class="ui grid">
        <div class="ui eight wide column">
          <div class="ui purple segment">
            <a class="ui purple ribbon label">Detalle del cliente</a>
            <br>
            <br>
            <div class="ui column centered">
              <table class="ui celled small hover compact table">
                <tbody>
                  <tr>
                    <th>Nombre:</th>
                    <td>
                      {{response.CustomerId.Name}}
                    </td>
                  </tr>
                  <tr>
                    <th>Teléfono:</th>
                    <td>
                      {{response.CustomerId.Phone}}
                    </td>
                  </tr>
                  <tr>
                    <th>Email:</th>
                    <td>
                      {{response.CustomerId.email}}
                    </td>
                  </tr>
                  <tr>
                    <th>Fecha de registro:</th>
                    <td>
                      {{ToStringF response.createdAt}}
                    </td>
                  </tr>
                  <tr>
                    <th>Agente:</th>
                    <td>
                      {{response.AgentId.AgentId.Names}}
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="ui eight wide column">
          <div class="ui purple segment">
            <a class="ui purple ribbon label">Detalle de la Conversación</a>
            <br>
            <br>
            <div class="ui column centered">

              <div class="ui comments" id="chatroom" style="overflow:scroll;height:162px;">
                <div class="comment">
                  <a class="avatar">
                    <img src="/images/demo/avatar/tom.jpg">
                  </a>
                  <div class="content">
                    <a class="author">Christian Rocha</a>
                    <div class="metadata">
                      <div class="date">2 days ago</div>
                    </div>
                    <div class="text">
                      I re-tweeted this.
                    </div>
                    <div class="actions">
                      <a class="reply">Reply</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div><br>
  <a class="ui purple button" href="/Dash/history">Regresar</a>
</div>



{{#section 'script'}}
<script src="/js/ChatUtilities.js"></script>
<script src="/common/ChatDetail.js?v=2"></script>
